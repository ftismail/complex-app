  <%-include('includes/header')%>
  <div class="container py-md-5 container--narrow">
    <%-include('includes/flash')%>

    <% if(posts.length){%> 
      <div class="list-group">
        <h2 class="text-center mb-4">the leates from that you follow</h2>
        <% posts.forEach(function(element){%>
          <a href="/post/<%=element._id%>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%=element.author.avatar%>">
          <strong><%=element.title%></strong> <span class="text-muted small" >By <%= element.author.username %> on <%= element.createDate.getDate() %>/<%= element.createDate.getMonth() + 1 %>/<%= element.createDate.getFullYear() %></span>
        </a>
          <%})%>
      </div>
    <%}else{%>
      <div class="text-center">
        <h2>Hello <strong><%= user.username %></strong>, your feed is empty.</h2>
        <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
      </div>
    <%} %>
  </div>
  <%-include('includes/footer')%>
 